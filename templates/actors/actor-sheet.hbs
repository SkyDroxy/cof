{{!log 'actor-sheet' this}}
<form class="{{cssClass}}" autocomplete="off">
    <div class="wrap">
        <div class="header">
            <div class="cof-flexrow header-background cof-no-wrap">
                <div class="cof-flex1 cof-left">
                    <div id="banner-left"></div>
                </div>
                <div class="cof-flex1 cof-right">
                    <div id="banner-right"></div>
                </div>
            </div>
            <div class="cof-flexrow">
                <div class="cof-flex1 cof-center" id="logo-banner"><img src="{{logoPath}}"/></div>
            </div>
        </div>
        <div class="cof-flexrow main">
            <div class="sidebar cof-flex1">
                <br/>
                <div class="cof-flexrow">
                    <div class="cof-flex1 cof-center">
                        <span class="charname">{{actor.name}}</span>
                    </div>
                </div>
                <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
            </div>
            <div class="separator cof-flex1"></div>
            <div class="content cof-flex3">
                {{> "systems/cof/templates/actors/parts/actor-details.hbs"}}
                <div class="cof-flexrow">
                    <div class="cof-flex1 half-spacer"></div>
                </div>
                {{!-- Sheet Tab Navigation --}}
                {{> "systems/cof/templates/actors/parts/actor-tabs.hbs"}}
            </div>
        </div>
    </div>
</form>

